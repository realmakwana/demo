

<div class="topbar">
    <div class="topbar-left">
        <div class="topbar-search">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" placeholder="Search menus (e.g. Invoice, User)..." 
                   @ref="searchInputRef"
                   @bind="searchQuery" 
                   @bind:event="oninput" 
                   @onfocus="() => isSearchFocused = true"
                   @onblur="HandleSearchBlur"
                   @onkeydown="HandleSearchKeyDown" />
            
            @if (isSearchFocused && !string.IsNullOrWhiteSpace(searchQuery))
            {
                <div class="search-results-dropdown">
                    @{
                        var results = GetFilteredMenuItems().ToList();
                        for (int i = 0; i < results.Count; i++)
                        {
                            var item = results[i];
                            var index = i;
                            <div class="search-result-item @(selectedSearchIndex == index ? "selected" : "")" 
                                 @onmousedown="() => NavigateToResult(item.Url)"
                                 @onmouseenter="() => selectedSearchIndex = index">
                                <span class="result-icon">@((MarkupString)item.Icon)</span>
                                <div class="result-text">
                                    <span class="result-title">@item.Title</span>
                                    <span class="result-subtitle">@item.Category</span>
                                </div>
                                <svg class="result-arrow" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
                            </div>
                        }
                    }
                    @if (!results.Any())
                    {
                        <div class="search-no-results">
                            No menu found for "@searchQuery"
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="topbar-right">
        @* Theme Toggle *@
        <div class="topbar-icon" title="@(isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")" @onclick="ToggleTheme">
            @if (isDarkMode)
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="theme-icon-sun rotate-center">
                    <circle cx="12" cy="12" r="5"></circle>
                    <line x1="12" y1="1" x2="12" y2="3"></line>
                    <line x1="12" y1="21" x2="12" y2="23"></line>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                    <line x1="1" y1="12" x2="3" y2="12"></line>
                    <line x1="21" y1="12" x2="23" y2="12"></line>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                </svg>
            }
            else
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="theme-icon-moon rotate-center">
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
            }
        </div>

        <div class="topbar-icon" title="Theme Settings" @onclick="OnToggleSettings">
            <i class="bi bi-palette" style="font-size: 20px;"></i>
        </div>

        <div class="topbar-icon" title="Notifications">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
            </svg>
        </div>

        <div class="topbar-profile" @onclick="ToggleProfileMenu" style="position: relative; cursor: pointer;">
            <div class="topbar-avatar">
                @GetUserInitials()
            </div>
            <div class="profile-text" style="display: flex; flex-direction: column;">
                <span style="font-size: 0.875rem; font-weight: 500;">@currentUser</span>
                <span style="font-size: 0.75rem; color: var(--text-secondary);">@currentRole</span>
            </div>

            @if (showProfileMenu)
            {
                <div class="dropdown-overlay" @onclick="() => showProfileMenu = false" @onclick:stopPropagation="true"></div>
                <div class="profile-dropdown" @onclick:stopPropagation="true">
                    <div class="profile-dropdown-header">
                         <span class="user-name">@currentUser</span>
                         <span class="user-email">admin@transporterp.com</span>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="profile-dropdown-item" @onclick='() => NavigateTo("/profile")'>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                        <span>My Profile</span>
                    </div>
                    <div class="profile-dropdown-item" @onclick='() => NavigateTo("/settings")'>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                        <span>Settings</span>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="profile-dropdown-item logout" @onclick="HandleLogout">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span>Logout</span>
                    </div>
                </div>
            }
        </div>

        @* Hamburger Menu Toggle for Mobile *@
        <button class="mobile-toggle-btn" @onclick="OnToggleMobileMenu">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
    </div>
</div>
