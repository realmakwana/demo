@page "/students"
@using StudentEntity = ERP.Models.Entities.Student
@using ERP.Components.Shared.Grid
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons

<PageTitle>Students - Transport ERP</PageTitle>

<div class="page-container">
    <!-- Breadcrumb -->
    <Breadcrumb Items="@breadcrumbItems" />

    <!-- Manual Form Section -->
    @if (showForm)
    {
        <div class="form-container fade-in">
            <div class="form-header">
                <h3>@(currentStudent?.StudentID == 0 ? "Add New Student" : "Edit Student")</h3>
            </div>

            <EditForm Model="@currentStudent" OnValidSubmit="SaveStudent">
                <DataAnnotationsValidator />
                
                <div class="row g-4">
                    <!-- Student Name -->
                    <div class="col-md-6">
                        <SfTextBox @bind-Value="currentStudent.StudentName" 
                                   Placeholder="Student Name *"
                                   FloatLabelType="FloatLabelType.Auto"
                                   CssClass="e-outline">
                        </SfTextBox>
                        <ValidationMessage For="@(() => currentStudent.StudentName)" />
                    </div>

                    <!-- Phone Number -->
                    <div class="col-md-6">
                        <SfTextBox @bind-Value="currentStudent.PhoneNumber" 
                                   Placeholder="Phone Number"
                                   FloatLabelType="FloatLabelType.Auto"
                                   CssClass="e-outline">
                        </SfTextBox>
                        <ValidationMessage For="@(() => currentStudent.PhoneNumber)" />
                    </div>

                    <!-- Is Active -->
                    <div class="col-md-12">
                        <SfCheckBox @bind-Checked="currentStudent.IsActive" Label="Active" TChecked="bool?"></SfCheckBox>
                    </div>
                </div>

                <div class="sticky-footer">
                    <SfButton CssClass="e-primary" IconCss="bi bi-save" Type="Submit">
                        @(currentStudent?.StudentID == 0 ? "Save Student" : "Update Student")
                    </SfButton>
                    <SfButton CssClass="e-outline" OnClick="CloseForm">
                        Cancel
                    </SfButton>
                </div>
            </EditForm>
        </div>
    }

    <!-- Common Grid -->
    @if (!showForm)
    {
        <CommonGrid TEntity="StudentEntity"
                    GridTitle="All Students"
                    EntityName="Student"
                    HelpText="Manage student records and their information."
                    DataSource="@students"
                    CanAdd="@(currentRights?.IsAdd ?? true)"
                    CanEdit="@(currentRights?.IsEdit ?? true)"
                    CanDelete="@(currentRights?.IsDelete ?? true)"
                    OnAdd="OpenAddForm"
                    OnEdit="OpenEditForm"
                    OnDelete="DeleteStudent">
            <GridColumns>
                <GridColumn Field="@nameof(StudentEntity.StudentID)" HeaderText="ID" Width="80" Visible="false" IsPrimaryKey="true"></GridColumn>
                <GridColumn Field="@nameof(StudentEntity.StudentName)" HeaderText="Student Name" Width="200"></GridColumn>
                <GridColumn Field="@nameof(StudentEntity.PhoneNumber)" HeaderText="Phone Number" Width="150"></GridColumn>
                <GridColumn Field="@nameof(StudentEntity.IsActive)" HeaderText="Status" Width="100">
                    <Template>
                        @{
                            var student = context as StudentEntity;
                            <span class="@(student?.IsActive ?? false ? "badge-success" : "badge-danger")">
                                @(student?.IsActive ?? false ? "Active" : "Inactive")
                            </span>
                        }
                    </Template>
                </GridColumn>
            </GridColumns>
        </CommonGrid>
    }
</div>
