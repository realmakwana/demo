@page "/usercategory"
@using UserCategoryEntity = ERP.Models.Entities.UserCategory
@using ERP.Components.Shared.Grid
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons

<PageTitle>User Category - Transport ERP</PageTitle>

<div class="page-container">
    <!-- Breadcrumb -->
    <Breadcrumb Items="@breadcrumbItems" />

    <!-- Manual Form Section -->
    @if (showForm)
    {
        <div class="form-container fade-in">
            <div class="form-header">
                <h3>@(currentCategory?.UserCategoryID == 0 ? "Add New Category" : "Edit Category")</h3>
                <SfButton CssClass="e-outline" IconCss="bi bi-x" OnClick="CloseForm">Close</SfButton>
            </div>

            <EditForm Model="@currentCategory" OnValidSubmit="SaveCategory">
                <DataAnnotationsValidator />
                
                <div class="row g-4">
                    <!-- Category Name -->
                    <div class="col-md-12">
                        <SfTextBox @bind-Value="currentCategory.UserCategoryName" 
                                   Placeholder="Category Name *"
                                   FloatLabelType="FloatLabelType.Auto"
                                   CssClass="e-outline">
                        </SfTextBox>
                        <ValidationMessage For="@(() => currentCategory.UserCategoryName)" />
                    </div>

                    <!-- Is Active -->
                    <div class="col-md-12">
                        <SfCheckBox @bind-Checked="currentCategory.IsActive" Label="Active" TChecked="bool?"></SfCheckBox>
                    </div>
                </div>

                <div class="sticky-footer">
                    <SfButton CssClass="e-primary" IconCss="bi bi-save" Type="Submit">
                        @(currentCategory?.UserCategoryID == 0 ? "Save Category" : "Update Category")
                    </SfButton>
                    <SfButton CssClass="e-outline" OnClick="CloseForm">
                        Cancel
                    </SfButton>
                </div>
            </EditForm>
        </div>
    }

    <!-- Common Grid -->
    @if (!showForm)
    {
        <CommonGrid TEntity="UserCategoryEntity"
                    GridTitle="All User Categories"
                    EntityName="User Category"
                    HelpText="Manage user categories and their status."
                    DataSource="@categories"
                    CanAdd="@(currentRights?.IsAdd ?? true)"
                    CanEdit="@(currentRights?.IsEdit ?? true)"
                    CanDelete="@(currentRights?.IsDelete ?? true)"
                    OnAdd="OpenAddForm"
                    OnEdit="OpenEditForm"
                    OnDelete="DeleteCategory">
            <GridColumns>
                <GridColumn Field="@nameof(UserCategoryEntity.UserCategoryID)" HeaderText="ID" Width="80" IsPrimaryKey="true"></GridColumn>
                <GridColumn Field="@nameof(UserCategoryEntity.UserCategoryName)" HeaderText="Category Name" Width="300"></GridColumn>
                <GridColumn Field="@nameof(UserCategoryEntity.IsActive)" HeaderText="Status" Width="100">
                    <Template>
                        @{
                            var category = context as UserCategoryEntity;
                            <span class="@(category?.IsActive ?? false ? "badge-success" : "badge-danger")">
                                @(category?.IsActive ?? false ? "Active" : "Inactive")
                            </span>
                        }
                    </Template>
                </GridColumn>
            </GridColumns>
        </CommonGrid>
    }
</div>
